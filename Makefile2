OPTION = -I /usr/local/include/eigen3
LIBS = -framework OpenGL -framework GLUT
OBJS = bvh.o camera.o node.o joint.o tree.o

all : main.o camera.o node.o joint.o tree.o bvh.o
	g++ -std=c++11 $(OPTION) $(OBJS) $(LIBS) -o main

main : $(OBJS)
	g++ -std=c++11 -I /usr/local/include/eigen3/ -c -g src/main.cpp $(LIBS) -o main.o

bvh.o : include/bvh.h
    g++ -std=c++11 -I /usr/local/include/eigen3/ include/bvh_struct.h -c -g src/bvh.cpp $(LIBS) -o bvh.o

camera.o : include/camera.h
	g++ -std=c++11 -I /usr/local/include/eigen3/ -c -g src/camera.cpp $(LIBS) -o camera.o

node.o : include/node.h
	g++ -std=c++11 -I /usr/local/include/eigen3/ -c -g src/node.cpp $(LIBS) -o node.o

joint.o : include/joint.h
	g++ -std=c++11 -I /usr/local/include/eigen3/ -c -g src/joint.cpp $(LIBS) -o joint.o

tree.o : include/tree.h
	g++ -std=c++11 -I /usr/local/include/eigen3/ -c -g src/tree.cpp $(LIBS) -o tree.o

clean :
	rm *.o main
